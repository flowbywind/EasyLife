@model PagedList.IPagedList<EasyLife.MemberDto>
@using PagedList.Mvc;

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.MerchantID })
</p>
<table class="table">
    <tr>
        <th>
            member_name
        </th>
        <th>
            member_sex)
        </th>
        <th>
            member_birthday
        </th>
        <th>
            member_phone
        </th>
        <th>
            member_address
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.member_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.member_sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.member_birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.member_phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.member_address)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }
</table>
@Html.PagedListPager(Model, pageNumber => Url.Action("List", new { pageNumber }))