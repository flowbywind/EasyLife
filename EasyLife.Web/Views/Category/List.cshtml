@model PagedList.IPagedList<EasyLife.Application.CategoryDto>
@using PagedList.Mvc;

@{
    ViewBag.Title = "行业列表";
}

<h2>List</h2>

<p>
    @Html.ActionLink("新建", "create")
</p>
<table class="table table-striped table-bordered table-hover dataTables-example dataTable ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].cat_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].cat_code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].status)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cat_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cat_code)
                </td>
                <td>
                    @Html.ActionLink("编辑", "edit", new { id = item.Id }) |
                    @Html.ActionLink("详情", "details", new { id = item.Id }) |
                    @Html.ActionLink("删除", "delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model, pageNumber => Url.Action("List", new { pageNumber }))
