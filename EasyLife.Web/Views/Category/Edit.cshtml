@model EasyLife.Application.CategoryDto

@{
    ViewBag.Title = "编辑行业";
}

<h2>行业分类</h2>

@using (Html.BeginForm("edit", "category"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>编辑行业</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.cat_name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cat_name)
                @Html.ValidationMessageFor(model => model.cat_name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cat_code, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cat_code)
                @Html.ValidationMessageFor(model => model.cat_code)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.status, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.status, (IEnumerable<SelectListItem>)ViewData["status"])
                @Html.ValidationMessageFor(model => model.status)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回列表", "List")
</div>
