@model EasyLife.CreateCategoryInput

@{
    ViewBag.Title = "行业分类";
}

<h2>行业分类</h2>

@using (Html.BeginForm("Create", "Category"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>新建行业</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.cat_name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cat_name)
                @Html.ValidationMessageFor(model => model.cat_name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cat_code, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cat_code)
                @Html.ValidationMessageFor(model => model.cat_code)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "List")
</div>
