@model PagedList.IPagedList<EasyLife.Application.TagDto>
@using PagedList.Mvc;

@{
    ViewBag.Title = "分类模块";
}

<h2>分类模块</h2>

<p>
    @Html.ActionLink("新建", "create", new { id = ViewBag.MerchantID })
</p>
<table class="table table-striped table-bordered table-hover dataTables-example dataTable ">
    <tr>
        <th>
            分类名称
        </th>
        <th>
            分类编码
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tag_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tag_code)
            </td>
            <td>
                @Html.ActionLink("编辑", "edit", new { id = item.Id }) |
                @Html.ActionLink("详情", "details", new { id = item.Id }) |
                @Html.ActionLink("删除", "delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, pageNumber => Url.Action("List", new { pageNumber }))
