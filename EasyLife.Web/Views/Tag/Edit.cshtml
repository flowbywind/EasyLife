@model EasyLife.Tag

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>TagInfo</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.tag_name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tag_name)
                @Html.ValidationMessageFor(model => model.tag_name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tag_code, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tag_code)
                @Html.ValidationMessageFor(model => model.tag_code)
            </div>
        </div>

        <div class="form-group hidden">
            <div class="col-md-10">
                @Html.Hidden("merchant_id")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "List", new { id = ViewData["merchant_id"] })
</div>
